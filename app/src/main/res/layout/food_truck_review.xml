<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/foodTruckReviewComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Some sample comment"
        app:layout_constraintStart_toStartOf="@+id/foodTruckReviewName"
        app:layout_constraintTop_toBottomOf="@+id/foodTruckReviewName" />

    <TextView
        android:id="@+id/foodTruckReviewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="SampleName"
        app:layout_constraintStart_toEndOf="@+id/foodTruckReviewImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/foodTruckReviewImage"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>